<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || "Admin | PansaStream" %></title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/public/app.css" />
  <link rel="stylesheet" href="/public/admin.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.3/dist/sweetalert2.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="/public/dropzone.min.css" />
</head>
<body class="admin-theme">
  <div class="admin-layout">
    <aside class="sidebar">
      <div class="logo">
        <a href="/admin" class="brand">
          <svg class="ico" viewBox="0 0 24 24"><path d="M3 5h18v4H3zM3 10h18v9H3z"/></svg>
          <span>Pansa<span class="accent">Admin</span></span>
        </a>
      </div>
      <nav class="menu">
        <a href="/admin" class="menu-item <%= (active==='dashboard'?'active':'') %>">
          <i class="fa-solid fa-gauge-high"></i> <span>Dashboard</span>
        </a>
        <a href="/admin/upload" class="menu-item <%= (active==='upload'?'active':'') %>">
          <i class="fa-solid fa-upload"></i> <span>Upload</span>
        </a>
        <a href="/admin/videos" class="menu-item <%= (active==='videos'?'active':'') %>">
          <i class="fa-solid fa-photo-film"></i> <span>Videos</span>
        </a>
        <a href="/admin/jobs" class="menu-item <%= (active==='jobs'?'active':'') %>">
          <i class="fa-solid fa-list-check"></i> <span>Jobs</span>
        </a>
        <a href="/admin/settings" class="menu-item <%= (active==='settings'?'active':'') %>">
          <i class="fa-solid fa-gear"></i> <span>Settings</span>
        </a>
      </nav>
      <div class="sidebar-footer">
        <a href="/admin/logout" class="menu-item logout">
          <i class="fa-solid fa-right-from-bracket"></i> <span>Logout</span>
        </a>
      </div>
    </aside>

    <div class="main">
      <header class="admin-topbar">
        <div class="page-title"><%= title || '' %></div>
        <div class="admin-user">
          <i class="fa-solid fa-circle-user"></i>
          <span><%= user ? (user.name || user.email) : 'Admin' %></span>
        </div>
      </header>
      <main class="admin-body">
        <%- body %>
      </main>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.3/dist/sweetalert2.all.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://kit.fontawesome.com/a2d9b09d5b.js" crossorigin="anonymous"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/public/dropzone.min.js"></script>
  <script src="/public/admin.js"></script>
</body>
</html>
