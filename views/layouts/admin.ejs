<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || "Admin | PansaStream" %></title>

  <!-- Fonts & Base -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/public/app.css" />
  <link rel="stylesheet" href="/public/admin.css" />

  <!-- âœ… CDN Essentials -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@5/dark.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>

<body class="admin-theme">
  <div class="admin-layout">
    <!-- ===== SIDEBAR ===== -->
    <aside class="sidebar">
      <div class="logo">
        <a href="/admin" class="brand">
          <i class="fa-solid fa-layer-group"></i>
          <span>Pansa<span class="accent">Admin</span></span>
        </a>
        <button class="toggle-btn"><i class="fa-solid fa-bars"></i></button>
      </div>

      <nav class="menu">
        <a href="/admin" class="menu-item <%= active==='dashboard' ? 'active' : '' %>">
          <i class="fa-solid fa-gauge-high"></i><span>Dashboard</span>
        </a>
        <a href="/admin/upload" class="menu-item <%= active==='upload' ? 'active' : '' %>">
          <i class="fa-solid fa-upload"></i><span>Upload</span>
        </a>
        <a href="/admin/videos" class="menu-item <%= active==='videos' ? 'active' : '' %>">
          <i class="fa-solid fa-photo-film"></i><span>Videos</span>
        </a>
        <a href="/admin/jobs" class="menu-item <%= active==='jobs' ? 'active' : '' %>">
          <i class="fa-solid fa-list-check"></i><span>Jobs</span>
        </a>
        <a href="/admin/settings" class="menu-item <%= active==='settings' ? 'active' : '' %>">
          <i class="fa-solid fa-gear"></i><span>Settings</span>
        </a>
      </nav>

      <div class="sidebar-footer">
        <a href="/admin/logout" class="menu-item logout">
          <i class="fa-solid fa-right-from-bracket"></i><span>Logout</span>
        </a>
      </div>
    </aside>

    <!-- ===== MAIN ===== -->
    <div class="main">
      <header class="admin-topbar">
        <button class="toggle-sidebar"><i class="fa-solid fa-bars"></i></button>
        <div class="page-title"><%= title || '' %></div>
        <div class="admin-user">
          <i class="fa-solid fa-circle-user"></i>
          <span><%= user ? (user.name || user.email) : 'Administrator' %></span>
        </div>
      </header>

      <main class="admin-body">
        <%- body %>
      </main>
    </div>
  </div>

  <!-- ===== SCRIPTS ===== -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/public/admin.js"></script>
</body>
</html>
