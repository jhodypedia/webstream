<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || "Admin | PansaStream" %></title>

  <!-- ===== Fonts & Base Styles ===== -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/public/app.css">
  <link rel="stylesheet" href="/public/admin.css">

  <!-- ===== CDN Plugins ===== -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.min.css" integrity="sha512-rr8tz2zJPiXqbyXKrc3kFMbzH0ZjvD5y3h9tR7OH/7XvuKMo5bGf0Jd8McbY6RJrEUY5ivp+4bbHd2+JmwrWaw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.3/dist/sweetalert2.min.css">

  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-MYxQWGGD8kMJ1uY2T2tVuk1xkhpWb0IhZ0w0BxjUz1CzHW3o7s5q2gPgYyEmIs8vPvXLEA0DsflEoK95yZBbXA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body class="admin-theme">
  <div class="admin-layout">

    <!-- ===== SIDEBAR ===== -->
    <aside class="sidebar">
      <div class="logo">
        <a href="/admin" class="brand">
          <svg class="ico" viewBox="0 0 24 24" width="22" height="22" fill="currentColor">
            <path d="M3 5h18v4H3zM3 10h18v9H3z"/>
          </svg>
          <span>Pansa<span class="accent">Admin</span></span>
        </a>
        <button class="toggle-btn"><i class="fa-solid fa-bars"></i></button>
      </div>

      <nav class="menu">
        <a href="/admin" class="menu-item <%= active==='dashboard'?'active':'' %>">
          <i class="fa-solid fa-gauge-high"></i><span>Dashboard</span>
        </a>
        <a href="/admin/upload" class="menu-item <%= active==='upload'?'active':'' %>">
          <i class="fa-solid fa-upload"></i><span>Upload</span>
        </a>
        <a href="/admin/videos" class="menu-item <%= active==='videos'?'active':'' %>">
          <i class="fa-solid fa-photo-film"></i><span>Videos</span>
        </a>
        <a href="/admin/jobs" class="menu-item <%= active==='jobs'?'active':'' %>">
          <i class="fa-solid fa-list-check"></i><span>Jobs</span>
        </a>
        <a href="/admin/settings" class="menu-item <%= active==='settings'?'active':'' %>">
          <i class="fa-solid fa-gear"></i><span>Settings</span>
        </a>
      </nav>

      <div class="sidebar-footer">
        <a href="/admin/logout" class="menu-item logout">
          <i class="fa-solid fa-right-from-bracket"></i><span>Logout</span>
        </a>
      </div>
    </aside>

    <!-- ===== MAIN ===== -->
    <div class="main">
      <header class="admin-topbar">
        <button class="toggle-sidebar"><i class="fa-solid fa-bars"></i></button>
        <div class="page-title"><%= title || '' %></div>
        <div class="admin-user">
          <i class="fa-solid fa-circle-user"></i>
          <span><%= user ? (user.name || user.email) : 'Admin' %></span>
        </div>
      </header>

      <main class="admin-body">
        <%- body %>
      </main>
    </div>
  </div>

  <!-- ===== JS CDN Plugins ===== -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.3/dist/sweetalert2.all.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.js" integrity="sha512-7WiPCnlmWXX4t1geiDBeXb+4E+KrsFidPlfRynr8S88d9+5K3HBGYIraDSKX7cZfEpF1NFR2ovh5Yhr0A1xA5A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="/socket.io/socket.io.js"></script>

  <!-- ===== Admin Script ===== -->
  <script src="/public/admin.js"></script>
</body>
</html>
