<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || "Admin | PansaStream" %></title>

  <!-- Fonts & Base Styles -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/public/app.css" />
  <link rel="stylesheet" href="/public/admin.css" />

  <!-- Vendor Libraries -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.3/dist/sweetalert2.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" />

  <!-- Icons -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="admin-theme">
  <div class="admin-layout">
    <!-- SIDEBAR -->
    <aside class="sidebar" id="sidebar">
      <div class="logo">
        <a href="/admin" class="brand">
          <svg class="ico" viewBox="0 0 24 24" width="24" height="24" fill="#6be2ff">
            <path d="M3 5h18v4H3zM3 10h18v9H3z"/>
          </svg>
          <span>Pansa<span class="accent">Admin</span></span>
        </a>
      </div>
      <% const current = active || ''; %>
      <nav class="menu">
        <a href="/admin" class="menu-item <%= current==='dashboard'?'active':'' %>">
          <i class="fa-solid fa-gauge-high"></i> <span>Dashboard</span>
        </a>
        <a href="/admin/upload" class="menu-item <%= current==='upload'?'active':'' %>">
          <i class="fa-solid fa-upload"></i> <span>Upload</span>
        </a>
        <a href="/admin/videos" class="menu-item <%= current==='videos'?'active':'' %>">
          <i class="fa-solid fa-photo-film"></i> <span>Videos</span>
        </a>
        <a href="/admin/jobs" class="menu-item <%= current==='jobs'?'active':'' %>">
          <i class="fa-solid fa-list-check"></i> <span>Jobs</span>
        </a>
        <a href="/admin/settings" class="menu-item <%= current==='settings'?'active':'' %>">
          <i class="fa-solid fa-gear"></i> <span>Settings</span>
        </a>
      </nav>
      <div class="sidebar-footer">
        <a href="/admin/logout" class="menu-item logout">
          <i class="fa-solid fa-right-from-bracket"></i> <span>Logout</span>
        </a>
      </div>
    </aside>

    <!-- MAIN CONTENT -->
    <div class="main">
      <header class="admin-topbar">
        <button id="sidebarToggle" class="sidebar-toggle" aria-label="Toggle Sidebar">
          <i class="fa-solid fa-bars"></i>
        </button>
        <div class="page-title"><%= title || '' %></div>
        <div class="admin-user">
          <i class="fa-solid fa-circle-user"></i>
          <span><%= user ? (user.name || user.email) : 'Administrator' %></span>
        </div>
      </header>

      <main class="admin-body">
        <%- body %>
      </main>
    </div>
  </div>

  <!-- JS Libraries -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.3/dist/sweetalert2.all.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/public/admin.js"></script>

  <!-- Sidebar Toggle Logic -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const sidebar = document.getElementById('sidebar');
      const toggleBtn = document.getElementById('sidebarToggle');

      toggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('collapsed');
        localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
      });

      // Restore previous state
      if (localStorage.getItem('sidebarCollapsed') === 'true') {
        sidebar.classList.add('collapsed');
      }

      // Close sidebar on mobile click outside
      document.addEventListener('click', e => {
        if (window.innerWidth <= 768 && sidebar.classList.contains('collapsed') === false) {
          const withinSidebar = e.target.closest('.sidebar, #sidebarToggle');
          if (!withinSidebar) sidebar.classList.add('collapsed');
        }
      });
    });
  </script>
</body>
</html>
