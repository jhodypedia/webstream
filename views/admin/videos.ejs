<section class="page-videos">
  <div class="page-header">
    <h2><i class="fa-solid fa-photo-film"></i> Video Management</h2>
    <button class="btn btn-primary glow" id="btnCreateVideo">
      <i class="fa-solid fa-plus"></i> New Video
    </button>
  </div>

  <table id="tblVideos" class="display video-table" style="width:100%">
    <thead>
      <tr>
        <th>Thumb</th>
        <th>Title</th>
        <th>Status</th>
        <th>Views</th>
        <th>Created</th>
        <th style="width:180px;">Actions</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</section>

<!-- Modal -->
<div id="modalVideo" class="admin-modal" hidden>
  <div class="admin-modal__body animate__animated animate__zoomIn">
    <h3 id="modalTitle"><i class="fa-solid fa-pen"></i> Manage Video</h3>
    <form id="formVideo">
      <input type="hidden" name="id" />
      <div class="row">
        <label>Title</label>
        <input name="title" required />
      </div>
      <div class="row">
        <label>Description</label>
        <textarea name="description" rows="3"></textarea>
      </div>
      <div class="row">
        <label>HLS Master URL</label>
        <input name="hls_master_url" placeholder="/hls/UUID/master.m3u8" />
      </div>
      <div class="row">
        <label>Thumbnail URL</label>
        <input name="thumbnail_url" placeholder="/storage/thumbs/UUID.jpg" />
      </div>
      <div class="row">
        <label>Status</label>
        <select name="status">
          <option value="ready">Ready</option>
          <option value="uploaded">Uploaded</option>
          <option value="failed">Failed</option>
        </select>
      </div>
      <div class="actions">
        <button type="button" class="btn btn-ghost" id="btnCancelModal">
          <i class="fa-solid fa-xmark"></i> Cancel
        </button>
        <button type="submit" class="btn btn-primary glow">
          <i class="fa-solid fa-save"></i> Save
        </button>
      </div>
    </form>
  </div>
</div>

