<section>
  <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:14px;">
    <h2>Videos</h2>
    <button class="btn btn-primary" id="btnCreateVideo">+ Create</button>
  </div>
  <table id="tblVideos" class="display" style="width:100%">
    <thead>
      <tr>
        <th>Thumb</th>
        <th>Title</th>
        <th>Status</th>
        <th>Views</th>
        <th>Created</th>
        <th style="width:180px;">Actions</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</section>

<!-- Modal Create/Edit -->
<div id="modalVideo" class="admin-modal" hidden>
  <div class="admin-modal__body">
    <h3 id="modalTitle">Create Video</h3>
    <form id="formVideo">
      <input type="hidden" name="id" />
      <div class="row"><label>Title</label><input name="title" required /></div>
      <div class="row"><label>Description</label><textarea name="description" rows="3"></textarea></div>
      <div class="row"><label>HLS Master URL</label><input name="hls_master_url" placeholder="/hls/UUID/master.m3u8" /></div>
      <div class="row"><label>Thumbnail URL</label><input name="thumbnail_url" placeholder="/storage/thumbs/UUID.jpg" /></div>
      <div class="row">
        <label>Status</label>
        <select name="status">
          <option value="ready">ready</option>
          <option value="uploaded">uploaded</option>
          <option value="failed">failed</option>
        </select>
      </div>
      <div class="actions">
        <button type="button" class="btn btn-ghost" id="btnCancelModal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="btnSaveModal">Save</button>
      </div>
    </form>
  </div>
</div>
