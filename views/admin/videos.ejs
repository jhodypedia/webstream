<section>
  <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:14px;">
    <h2>Video Management</h2>
    <button class="btn btn-primary" id="btnCreateVideo"><i class="fa fa-plus"></i> Add New</button>
  </div>

  <table id="tblVideos" class="display nowrap" style="width:100%">
    <thead>
      <tr>
        <th>Thumb</th>
        <th>Title</th>
        <th>Status</th>
        <th>Views</th>
        <th>Created</th>
        <th style="width:180px;">Actions</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <p style="margin-top:14px;color:var(--admin-muted);">
    <strong>Note:</strong> Videos marked as <code>ready</code> are visible to users.<br>
    Click <strong>Edit</strong> to update metadata, or <strong>Delete</strong> to remove video.
  </p>
</section>

<!-- Modal -->
<div id="modalVideo" class="admin-modal" hidden>
  <div class="admin-modal__body">
    <h3 id="modalTitle">Create Video</h3>
    <form id="formVideo">
      <input type="hidden" name="id" />
      <div class="row"><label>Title</label><input name="title" required /></div>
      <div class="row"><label>Description</label><textarea name="description" rows="3"></textarea></div>
      <div class="row"><label>HLS Master URL</label><input name="hls_master_url" /></div>
      <div class="row"><label>Thumbnail URL</label><input name="thumbnail_url" /></div>
      <div class="row">
        <label>Status</label>
        <select name="status">
          <option value="ready">ready</option>
          <option value="uploaded">uploaded</option>
          <option value="failed">failed</option>
        </select>
      </div>
      <div class="actions">
        <button type="button" class="btn btn-ghost" id="btnCancelModal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>
