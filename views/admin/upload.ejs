<section class="upload-section">
  <div class="upload-header">
    <h2>Manual Upload</h2>
    <a href="/admin/jobs" class="btn btn-primary">
      <i class="fa fa-list"></i> View Jobs
    </a>
  </div>

  <!-- Dropzone Upload -->
  <form id="dzUpload" class="dropzone dz-theme" enctype="multipart/form-data">
    <div class="dz-message">
      <i class="fa fa-cloud-upload-alt"></i>
      <h3>Drag & Drop or Click to Upload</h3>
      <p>Accepted: <strong>.mp4, .mov, .mkv</strong> (max 2GB)</p>
    </div>
  </form>

  <div class="upload-note">
    <p><strong>Note:</strong> File will be queued and transcoded automatically.  
    You can monitor progress in <a href="/admin/jobs">Transcode Jobs</a>.</p>
  </div>
</section>
