<section>
  <h2 style="margin-bottom:14px;">Settings</h2>
  <form id="formSettings" class="admin-settings-form">
    <div class="row">
      <label>Server HLS Base URL</label>
      <input name="HLS_BASE_URL" placeholder="https://cdn.yourdomain.com/hls/" />
    </div>
    <div class="row">
      <label>Storage Path</label>
      <input name="STORAGE_PATH" placeholder="/var/www/videos/" />
    </div>
    <div class="row">
      <label>Max Upload Size (MB)</label>
      <input name="MAX_UPLOAD_MB" type="number" min="10" max="2048" value="2048" />
    </div>
    <div class="row">
      <label>Transcode Preset</label>
      <select name="TRANSCODE_PRESET">
        <option value="1080p">1080p</option>
        <option value="720p">720p</option>
        <option value="480p">480p</option>
      </select>
    </div>
    <div class="actions">
      <button type="submit" class="btn btn-primary">Save Settings</button>
    </div>
  </form>
</section>
